---
import '@styles/global.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="manifest" href="manifest.json" />
		<title>La boda de Luce & Jorge</title>
	</head>
	<body>
		<slot />
		<audio id="fondomusica" class="invisible fixed" loop controls>
			<source src="https://firebasestorage.googleapis.com/v0/b/data-shop-f5bf3.appspot.com/o/ds%2Fmusica.mp3?alt=media&token=57c90487-7d43-4a7b-ae20-fefea412759f " type="audio/mp3">
			Tu navegador no soporta el audio
		</audio>
	</body>
</html>

<script>
    window.onload = function() {
        const audioElement = document.getElementById('fondomusica') as HTMLAudioElement | null;

        if (audioElement) {
            // Intentar reproducir el audio automáticamente al cargar la página
            audioElement.play().then(() => {
                console.log('Reproducción de música iniciada');
            }).catch((error) => {
                console.log('Error al intentar reproducir el audio:', error);
                // Añadir un evento de clic para iniciar la reproducción si falla
                document.body.addEventListener('click', () => {
                    audioElement.play().then(() => {
                        console.log('Reproducción de música iniciada después de la interacción del usuario');
                    }).catch((error) => {
                        console.log('Error al intentar reproducir el audio después de la interacción del usuario:', error);
                    });
                }, { once: true });
            });
        }
    };
</script>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	/* Estilizar el scrollbar en navegadores basados en WebKit (Chrome, Edge, Safari) */
::-webkit-scrollbar {
  width:10px; /* Ancho de la barra */
  margin: auto;
}

::-webkit-scrollbar-track {
  background: #ffffff; /* Color del fondo de la barra */
  border-radius: 10px;
}

::-webkit-scrollbar-thumb {
  background: #a0a0a0; /* Color de la barra */
  border-radius: 10px;
  border: 2px solid #f5f5f5; /* Borde alrededor de la barra */
}

::-webkit-scrollbar-thumb:hover {
  background: #888; /* Color cuando se pasa el cursor */
}


</style>
