---
import '@styles/global.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="manifest" href="manifest.json" />
		<title>Astro Basics</title>
	</head>
	<body>
		<slot />
		<audio id="fondomusica" class="invisible fixed" autoplay loop controls>
			<source src="/musica.mp3" type="audio/mp3">
			Tu navegador no soporta el audio
		</audio>
	</body>
</html>

<script>
	window.onload = function() {
		const audioElement = document.getElementById('fondoMusica') as HTMLAudioElement | null;

		if (audioElement) {
			// Establecer el volumen antes de reproducir
			audioElement.volume = 0.5; // Ajusta el volumen a un 5% (puedes probar con 0.1, 0.05, o 0.01)

			// Reproducir el audio después de configurar el volumen
			audioElement.play().then(() => {
				console.log('Reproducción de música iniciada');
			}).catch((error) => {
				console.log('Error al intentar reproducir el audio:', error);
			});
		}
	};
</script>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	/* Estilizar el scrollbar en navegadores basados en WebKit (Chrome, Edge, Safari) */
::-webkit-scrollbar {
  width:10px; /* Ancho de la barra */
  margin: auto;
}

::-webkit-scrollbar-track {
  background: #ffffff; /* Color del fondo de la barra */
  border-radius: 10px;
}

::-webkit-scrollbar-thumb {
  background: #a0a0a0; /* Color de la barra */
  border-radius: 10px;
  border: 2px solid #f5f5f5; /* Borde alrededor de la barra */
}

::-webkit-scrollbar-thumb:hover {
  background: #888; /* Color cuando se pasa el cursor */
}


</style>
