---
interface Props {
    photoTitle: string;
    photoSrc: string;
}

const { photoTitle, photoSrc } = Astro.props;
---


          <div class="relative group cursor-pointer">
           
            <div class="relative h-[400px] rounded-2xl overflow-hidden group-hover:scale-105 transition-transform duration-300">
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent z-10"></div>
              <img 
                src={ photoSrc } 
                alt="Italy destinations" 
                class="w-full h-full object-cover transition-transform duration-300"
              />
              <h3 class="absolute bottom-6 left-6 text-white text-2xl font-semibold z-20">{ photoTitle }</h3>
            </div>
          </div>
      </div>